@using Models
@using Services
@inject IPostService PostService

<div class="card">
    <img class="card-img-top" src="@Post.HeadImagePath" alt="Post image cap">
    <div class="card-body">
        <h5 class="card-title">@Post.Title</h5>
        <p class="card-text">@Post.Summary</p>
        @* TODO: Aggiungere sezione categorie *@
    </div>
    <div class="card-footer">
        <small class="text-muted">@Post.PublishDate.ToShortDateString()</small>
    </div>
</div>

@code {

    [Parameter]
    public string Path { get; set; }

    public Post Post { get; set; } = new Post();

    protected override async Task OnParametersSetAsync()
    {
        Post = await PostService.GetPostMetadataFromPathAsync(Path);
    }
}